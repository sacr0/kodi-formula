<keymap>
 <global>
  <remote>
   <left>Left</left>
   <right>Right</right>
   <up>Up</up>
   <down>Down</down>
   <select>Select</select>
   <red>ContextMenu</red>
   <green>info</green>
   <yellow>Mute</yellow>
   <blue>togglefullscreen</blue>
   <!--blue>Fullscreen</blue-->
   <back>Back</back>
  </remote>
 </global>
 <!--VIDEOS-->
 <FullscreenVideo>
  <remote>
   <select>OSD</select>
   <skipplus>FastForward</skipplus>
   <skipminus>Rewind</skipminus>
   <left>StepBack</left>
   <right>StepForward</right>
   <up>BigStepForward</up>
   <down>BigStepBack</down>
   <red>Info</red>
   <green>AudioNextLanguage</green>
   <yellow>NextSubtitle</yellow>
   <!--blue>RunScript(script.xbmc.subtitles)</blue-->
   <blue>ActivateWindow(SubtitleSearch)</blue>
   <back>Stop</back>
  </remote>
 </FullscreenVideo>
 <VideoOSD>
  <remote>
   <red>CodecInfo</red>
   <green>Info</green>
   <yellow>Info</yellow>
   <blue>Info</blue>
  </remote>
 </VideoOSD>
<MyVideos>
  <remote>
   <blue>ToggleWatched</blue>
  </remote>
</MyVideos>
 <MyVideoPlaylist>
  <remote>
   <red>MoveItemUp</red>
   <green>MoveItemDown</green>
   <yellow>Delete</yellow>
   <blue>ToggleWatched</blue>
  </remote>
 </MyVideoPlaylist>
